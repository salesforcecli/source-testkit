{
  "name": "@salesforce/source-testkit",
  "description": "testkit for running NUTs for source related commands",
  "version": "2.0.48",
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "salesforcecli/source-testkit",
  "scripts": {
    "build": "wireit",
    "ci-docs": "yarn sf-ci-docs",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "compile": "wireit",
    "copy-metadata": "copyfiles -u 1 'src/metadata/**/*' 'lib/metadata'",
    "docs": "sf-docs",
    "format": "wireit",
    "lint": "wireit",
    "lint-fix": "yarn sf-lint --fix",
    "prepack": "sf-prepack && yarn copy-metadata",
    "prepare": "sf-install",
    "test": "wireit",
    "test:only": "wireit"
  },
  "files": [
    "docs",
    "lib",
    "messages",
    "!lib/**/*.map"
  ],
  "dependencies": {
    "@salesforce/cli-plugins-testkit": "^3.2.25",
    "@salesforce/core": "^3.34.6",
    "@salesforce/kit": "^1.9.2",
    "@salesforce/source-deploy-retrieve": "^7.14.2",
    "@salesforce/ts-types": "^1.7.3",
    "archiver": "^5.2.0",
    "chai-each": "^0.0.1",
    "debug": "^4.3.1",
    "shelljs": "^0.8.4",
    "sinon": "^10.0.0"
  },
  "devDependencies": {
    "@salesforce/dev-config": "^3.0.0",
    "@salesforce/dev-scripts": "^4.1.3",
    "@salesforce/prettier-config": "^0.0.2",
    "@salesforce/ts-sinon": "^1.4.6",
    "@types/archiver": "^5.3.2",
    "@types/debug": "^4.1.5",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.56.0",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-salesforce": "^1.1.1",
    "eslint-config-salesforce-license": "^0.2.0",
    "eslint-config-salesforce-typescript": "^1.1.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "^39.9.1",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.0",
    "sinon": "^10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.9.5",
    "wireit": "^0.9.5"
  },
  "config": {},
  "publishConfig": {
    "access": "public"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile",
        "lint"
      ]
    },
    "compile": {
      "command": "tsc -p . --pretty --incremental && yarn copy-metadata",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "messages/**"
      ],
      "output": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "format": {
      "command": "prettier --write \"+(src|test|schemas)/**/*.+(ts|js|json)|command-snapshot.json\"",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "schemas/**/*.json",
        "command-snapshot.json",
        ".prettier*"
      ],
      "output": []
    },
    "lint": {
      "command": "eslint src test --color --cache --cache-location .eslintcache",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "messages/**",
        "**/.eslint*",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test:compile": {
      "command": "tsc -p \"./test\" --pretty",
      "files": [
        "test/**/*.ts",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test": {
      "dependencies": [
        "test:only",
        "test:compile"
      ]
    },
    "test:only": {
      "command": "nyc mocha \"test/**/*.test.ts\"",
      "env": {
        "FORCE_COLOR": "2"
      },
      "files": [
        "test/**/*.ts",
        "src/**/*.ts",
        "**/tsconfig.json",
        ".mocha*",
        "!*.nut.ts",
        ".nycrc"
      ],
      "output": []
    }
  }
}