{
  "name": "@salesforce/source-testkit",
  "description": "testkit for running NUTs for source related commands",
  "version": "2.2.17",
  "author": "Salesforce",
  "license": "BSD-3-Clause",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "salesforcecli/source-testkit",
  "scripts": {
    "build": "wireit",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "compile": "wireit",
    "copy-metadata": "copyfiles -u 1 'src/metadata/**/*' 'lib/metadata'",
    "docs": "sf-docs",
    "format": "wireit",
    "link-check": "wireit",
    "lint": "wireit",
    "lint-fix": "yarn sf-lint --fix",
    "prepack": "sf-prepack && yarn copy-metadata",
    "prepare": "sf-install",
    "test": "wireit",
    "test:only": "wireit"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "docs",
    "lib",
    "messages",
    "!lib/**/*.map"
  ],
  "dependencies": {
    "@salesforce/cli-plugins-testkit": "^5.3.5",
    "@salesforce/core": "^7.3.8",
    "@salesforce/kit": "^3.1.2",
    "@salesforce/source-deploy-retrieve": "^11.4.4",
    "@salesforce/ts-types": "^2.0.9",
    "chai": "^4.4.1",
    "debug": "^4.3.1",
    "fast-glob": "^3.3.2",
    "shelljs": "^0.8.4",
    "sinon": "^10.0.0"
  },
  "devDependencies": {
    "@salesforce/dev-scripts": "^9.1.2",
    "@types/debug": "^4.1.12",
    "@types/shelljs": "^0.8.15",
    "copyfiles": "^2.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "config": {},
  "publishConfig": {
    "access": "public"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile",
        "lint"
      ]
    },
    "compile": {
      "command": "tsc -p . --pretty --incremental && yarn copy-metadata",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "messages/**"
      ],
      "output": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "format": {
      "command": "prettier --write \"+(src|test|schemas)/**/*.+(ts|js|json)|command-snapshot.json\"",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "schemas/**/*.json",
        "command-snapshot.json",
        ".prettier*"
      ],
      "output": []
    },
    "lint": {
      "command": "eslint src test --color --cache --cache-location .eslintcache",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "messages/**",
        "**/.eslint*",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test:compile": {
      "command": "tsc -p \"./test\" --pretty",
      "files": [
        "test/**/*.ts",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test": {
      "dependencies": [
        "test:only",
        "test:compile",
        "link-check"
      ]
    },
    "test:only": {
      "command": "nyc mocha \"test/**/*.test.ts\"",
      "env": {
        "FORCE_COLOR": "2"
      },
      "files": [
        "test/**/*.ts",
        "src/**/*.ts",
        "**/tsconfig.json",
        ".mocha*",
        "!*.nut.ts",
        ".nycrc"
      ],
      "output": []
    },
    "link-check": {
      "command": "node -e \"process.exit(process.env.CI ? 0 : 1)\" || linkinator \"**/*.md\" --skip \"CHANGELOG.md|node_modules|test/|confluence.internal.salesforce.com|my.salesforce.com|%s\" --markdown --retry --directory-listing --verbosity error",
      "files": [
        "./*.md",
        "./!(CHANGELOG).md",
        "messages/**/*.md"
      ],
      "output": []
    }
  }
}
